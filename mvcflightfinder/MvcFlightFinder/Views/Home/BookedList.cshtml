@model IEnumerable<DBHandler.DataMapper.BookedFlights>

@{
    ViewBag.Title = "BookedList";
}

<div class="container">
    <div class="card ods">
        <div class="card-header">
            <h2>BookedList</h2>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FlyFrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FlyTo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Datefrom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Peoples)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dateofres)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FlyFrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FlyTo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Datefrom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Peoples)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dateofres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="card-footer">
            <h1 class="alert-warning">@ViewBag.Warn</h1>
        </div>
    </div>
</div>





