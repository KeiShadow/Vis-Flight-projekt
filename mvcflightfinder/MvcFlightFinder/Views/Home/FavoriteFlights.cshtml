@model IEnumerable<MvcFlightFinder.DataMapper.Favorite_fligths>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.flightFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.flightTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.flightFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.flightTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>

